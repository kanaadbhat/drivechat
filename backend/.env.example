# === Server Configuration ===
NODE_ENV=development
PORT=5000
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:5173

# === Clerk Authentication ===
CLERK_SECRET_KEY=sk_live_YOUR_CLERK_SECRET_KEY_HERE

# === Firebase / Firestore ===
# Get these from Firebase Project Settings > Service Accounts > Generate Private Key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# === Google OAuth (for Drive API) ===
# Get these from Google Cloud Console > Credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# === Redis Configuration (BullMQ + Realtime Streams) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === Realtime (Socket.IO + Redis Streams) ===
ENABLE_REALTIME=false
REALTIME_STREAM_MAXLEN=10000

# === Dev guards ===
# Skip periodic cleanup scheduling to avoid Firestore composite-index requirements during local dev
SKIP_PERIODIC_CLEANUP=false
